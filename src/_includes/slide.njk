<!DOCTYPE html>
<html lang="<%= site.locale %>">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="icon" href="/favicon.ico" /> -->
        <title><%= title %></title>
        <meta
            name="description"
            content="<%= (!!locals.description) ? description : site.description %>"
        />
        <meta name="author" content="<%= site.author %>" />
        <meta property="og:title" content="<%= title %>" />
        <meta
            property="og:description"
            content="<%= (!!locals.description) ? description : site.description %>"
        />
        <meta property="og:locale" content="<%= site.locale %>" />
        <meta property="og:site_name" content="<%= site.site_name %>" />
        <% if (locals.tags == "posts") { %>
        <meta property="og:type" content="article" />
        <meta
            property="article:published_time"
            content="<%= date.toISOString() %>"
        />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta
            name="apple-mobile-web-app-status-bar-style"
            content="black-translucent"
        />
        <script type="application/ld+json">
            {
                "description": "<%= (!!locals.description) ? description : site.description %>",
                "author": { "@type": "Person", "name": "<%= site.author %>" },
                "@type": "BlogPosting",
                "url": "<%= `${site.url}${page.url}` %>",
                "publisher": {
                    "@type": "Organization",
                    "logo": {
                        "@type": "ImageObject",
                        "url": "<%= `${site.url}/img/logo.png` %>"
                    },
                    "name": "<%= site.author %>"
                },
                "headline": "<%= title %>",
                "datePublished": "<%= date.toISOString() %>",
                "mainEntityOfPage": {
                    "@type": "WebPage",
                    "@id": "<%= `${site.url}${page.url}` %>"
                },
                "@context": "http://schema.org"
            }
        </script>
        <% } %>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/reveal.js@4.1.3/dist/reveal.css"
        />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/reveal.js@4.1.3/reveal.js/dist/theme/black.css"
        />
    </head>
    <body>
        {{ content | safe }}
        <script
            src="https://cdn.jsdelivr.net/npm/reveal.js@4.1.3/dist/reveal.js"
            crossorigin="anonymous"
            async
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/reveal.js@4.1.3/plugin/zoom/zoom.js"
            crossorigin="anonymous"
            async
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/reveal.js@4.1.3/plugin/notes/notes.js"
            crossorigin="anonymous"
            async
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/reveal.js@4.1.3/plugin/search/search.js"
            crossorigin="anonymous"
            async
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/reveal.js@4.1.3/plugin/highlight/highlight.js"
            crossorigin="anonymous"
            async
        ></script>
        <script>
            // https://revealjs.com/initialization/
            Reveal.initialize({
                controls: slide.controls,
                controlsTutorial: slide.controlsTutorial,
                controlsLayout: slide.controlsLayout,
                controlsBackArrows: slide.controlsBackArrows,
                progress: slide.progress,
                slideNumber: slide.slideNumber,
                showSlideNumber: slide.showSlideNumber,
                hashOneBasedIndex: slide.hashOneBasedIndex,
                hash: slide.hash,
                respondToHashChanges: slide.respondToHashChanges,
                history: slide.history,
                keyboard: slide.keyboard,
                keyboardCondition: slide.keyboardCondition,
                disableLayout: slide.disableLayout,
                overview: slide.overview,
                center: slide.center,
                touch: slide.touch,
                loop: slide.loop,
                rtl: slide.rtl,
                navigationMode: slide.navigationMode,
                shuffle: slide.shuffle,
                fragments: slide.fragments,
                fragmentInURL: slide.fragmentInURL,
                embedded: slide.embedded,
                help: slide.help,
                pause: slide.pause,
                showNotes: slide.showNotes,
                autoPlayMedia: slide.autoPlayMedia,
                preloadIframes: slide.preloadIframes,
                autoAnimate: slide.autoAnimate,
                autoAnimateMatcher: slide.autoAnimateMatcher,
                autoAnimateEasing: slide.autoAnimateEasing,
                autoAnimateDuration: slide.autoAnimateDuration,
                autoAnimateUnmatched: slide.autoAnimateUnmatched,
                autoAnimateStyles: slide.autoAnimateStyles,
                autoSlide: slide.autoSlide,
                autoSlideStoppable: slide.autoSlideStoppable,
                autoSlideMethod: slide.autoSlideMethod,
                defaultTiming: slide.defaultTiming,
                mouseWheel: slide.mouseWheel,
                previewLinks: slide.previewLinks,
                postMessage: slide.postMessage,
                postMessageEvents: slide.postMessageEvents,
                focusBodyOnPageVisibilityChange:
                    slide.focusBodyOnPageVisibilityChange,
                transition: slide.transition,
                transitionSpeed: slide.transitionSpeed,
                backgroundTransition: slide.backgroundTransition,
                pdfMaxPagesPerSlide: slide.pdfMaxPagesPerSlide,
                pdfSeparateFragments: slide.pdfSeparateFragments,
                pdfPageHeightOffset: slide.pdfPageHeightOffset,
                viewDistance: slide.viewDistance,
                mobileViewDistance: slide.mobileViewDistance,
                display: slide.display,
                hideInactiveCursor: slide.hideInactiveCursor,
                hideCursorTime: slide.hideCursorTime,
                // Learn about plugins: https://revealjs.com/plugins/
                plugins: [
                    RevealZoom,
                    RevealNotes,
                    RevealSearch,
                    // RevealMarkdown,
                    RevealHighlight,
                ],
            });
        </script>
    </body>
</html>
